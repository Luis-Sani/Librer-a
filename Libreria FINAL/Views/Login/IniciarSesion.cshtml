﻿@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Iniciar Sesion</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    
        <meta name="viewport" content="width=device-width" />
        <title>Iniciar Sesion</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <style>
            body {
                display: flex;
                flex-direction: column;
                justify-content: center;
                min-height: 100vh; 
                margin-top: -50px; 
            }

            .container.mt-5.pt-5 {
                margin-top: 0 !important; 
                padding-top: 0 !important; 
            }

        #imagenEncima {
            position: absolute;
            top: 10%; 
            left: 50%; 
            transform: translateX(-50%); 
            max-width: 10%;
            height: auto; 
            z-index: 100;
        }

        </style>
   

</head>
<body>
    <img src="/Inicio.png" alt="Descripción de la imagen" id="imagenEncima">

    <div class="container mt-5 pt-5">

        <div class="row justify-content-center">
            <div class="col-12 col-xl-4 col-md-6">

                <div class="card">
                    <div class="card-header text-center">
                        Bienvenido/a
                    </div>
                    <div class="card-body">

                        <form asp-controller="Login" asp-action="IniciarSesion" method="post">

                            <input class="form-control mb-3" type="text" placeholder="Correo" required name="correo" />
                            <input class="form-control mb-3" type="password" placeholder="Contraseña" required name="clave" />
                            <div class="d-grid gap-2 mb-3">
                                <button class="btn btn-primary" type="submit">Iniciar Sesion</button>
                            </div>
                            @if (ViewData["Mensaje"] != null)
                            {

                                <div class="form-group">
                                    <div class="alert alert-danger" role="alert">
                                        @ViewData["Mensaje"]
                                    </div>
                                </div>
                            }
                            ¿No tienes una cuenta? <a href="@Url.Action("Registro","Login")" > Registraste</a>

                        </form>

                    </div>

                </div>

            </div>
        </div>

    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

